<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_lenght"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/btn_crazy_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="压力测试"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_log_d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />
    <Button
        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="压力测试(F)"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="@id/btn_crazy_write"
        app:layout_constraintEnd_toStartOf="@id/btn_log_e"
        app:layout_constraintStart_toEndOf="@id/btn_crazy_write"
        app:layout_constraintTop_toTopOf="@id/btn_crazy_write" />

    <Button
        android:id="@+id/btn_init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="初始化"
        app:layout_constraintBottom_toTopOf="@id/btn_crazy_write"
        app:layout_constraintEnd_toStartOf="@id/btn_log_d"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btn_init_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="初始化(F)"
        app:layout_constraintBottom_toTopOf="@id/btn_crazy_write"
        app:layout_constraintEnd_toStartOf="@id/btn_log_d"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_log_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写入随机D"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="@id/btn_init"
        app:layout_constraintEnd_toStartOf="@id/btn_log_e"
        app:layout_constraintStart_toEndOf="@id/btn_init"
        app:layout_constraintTop_toTopOf="@id/btn_init" />

    <Button
        android:id="@+id/btn_log_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写入随机E"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="@id/btn_init"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_log_d"
        app:layout_constraintTop_toTopOf="@id/btn_init" />

</androidx.constraintlayout.widget.ConstraintLayout>